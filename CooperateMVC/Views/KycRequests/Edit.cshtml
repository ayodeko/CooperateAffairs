@model CooperateMVC.Models.KycRequest

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>KycRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RCNumber" class="control-label"></label>
                <input readonly asp-for="RCNumber" class="form-control" />
                <span asp-validation-for="RCNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequesterName" class="control-label"></label>
                <input readonly asp-for="RequesterName" class="form-control" />
                <span asp-validation-for="RequesterName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeRequested" class="control-label"></label>
                <input readonly asp-for="TimeRequested" class="form-control" />
                <span asp-validation-for="TimeRequested" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastTimeUpdated" class="control-label"></label>
                <input readonly asp-for="LastTimeUpdated" class="form-control" />
                <span asp-validation-for="LastTimeUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input readonly asp-for="Status" class="form-control"></h6>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInformation" class="control-label"></label>
                <input asp-for="AdditionalInformation" class="form-control" />
                <span asp-validation-for="AdditionalInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
               <input type="button" value="Go to KycInfo" onclick="location.href='@Url.Action("CreateKycInfo", "KycRequests", new {id = Model.RCNumber} )'" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.RequestId)
            @Html.HiddenFor(model => model.AssignedLawyerId)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
