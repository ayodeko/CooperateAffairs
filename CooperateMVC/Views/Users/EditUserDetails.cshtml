@model CooperateMVC.ViewModels.EditBankUserViewModel
@{
    ViewData["Title"] = "BankSignUp";
}

<h1>BankSignUp</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserDetails">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BankOfficerName" class="control-label"></label>
                <input asp-for="BankOfficerName" class="form-control" />
                <span asp-validation-for="BankOfficerName" class="text-danger"></span>
            </div>
            @Html.HiddenFor(model => model.Uid);
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

